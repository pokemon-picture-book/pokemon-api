{
  "name": "pokemon-api",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "micro -l tcp://0.0.0.0:$PORT ./dist/app.js",
    "start:local": "micro ./dist/app.js",
    "dev": "ts-node -C ttypescript --files node_modules/.bin/micro-dev -H $HOST -p $PORT ./src/app.ts",
    "dev:local": "ts-node -C ttypescript --files node_modules/.bin/micro-dev ./src/app.ts",
    "build": "ttsc",
    "clean": "rm -rf dist",
    "scan": "sonar-scanner",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "jest",
    "postmerge": "(git diff 'HEAD@{1}' --name-only | grep package.json > /dev/null) && npm ci || :",
    "migrate:generate": "ts-node $(npm bin)/typeorm migration:generate -n Initialize",
    "migrate:run": "ts-node $(npm bin)/typeorm migration:run",
    "migrate:revert": "ts-node $(npm bin)/typeorm migration:revert",
    "initialize:data": "ts-node-dev -C ttypescript --files src/db/seed"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix 'src/**/*.ts'",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "fs": "0.0.1-security",
    "js-yaml": "^3.13.1",
    "logform": "^2.1.2",
    "loglevel": "^1.6.3",
    "micro": "^9.3.4",
    "microrouter": "^3.1.3",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "pg": "^7.12.0",
    "progress": "^2.0.3",
    "puppeteer": "^1.19.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/loglevel": "^1.6.3",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.6.8",
    "@types/pg": "^7.4.14",
    "@types/progress": "^2.0.3",
    "@types/puppeteer": "^1.19.0",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0.0-beta.2",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "micro-dev": "^3.0.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.42",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.3",
    "typescript-transform-paths": "^1.1.8"
  }
}
